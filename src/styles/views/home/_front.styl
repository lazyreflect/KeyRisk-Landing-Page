.front
    .content
        flex-flow: column wrap
        align-items: left
        justify-content: center
        h2
            font-size: 5rem
            font-weight: 600
            letter-spacing: -3px
            align-items: left
            +min(1)
                font-size: 5.5rem
                letter-spacing: -5px
            +min(2)
                font-size: 5.2rem
                letter-spacing: -5px
            +min(3)
                font-size: 7rem
                letter-spacing: -5px
        div
            display: flex
            flex-wrap: wrap
            align-items: left
            justify-content: center
            h3
                width: 100%
                font-size: 2rem
                text-align: left
                margin: rem(15px) 0 rem(30px)
                color: scheme.heading
                line-height: 1
                +min(1)
                    font-size: 2rem
                    margin: 0 0 rem(40px)
                +min(2)
                    font-size: 2rem
                +min(3)
                    font-size: 2rem
         div
                display: flex
                flex-wrap: wrap
                align-items: left
                justify-content: center
                h4
                    width: 100%
                    font-size: 1.2rem
                    font-weight: 300
                    text-align: left
                    
                    color: scheme.heading
                    line-height: 1.2
                    +min(1)
                        font-size: 1.4rem
                       margin: 0 0 rem(40px)
                    +min(2)
                        font-size: 1.4rem
                    +min(3)
                        font-size: 1.4rem  
            div
                display: flex
                flex-wrap: wrap
                align-items: center
                justify-content: center
                h5
                    width: 100%
                    font-size: 1.2rem
                    text-align: center
                    margin: rem(15px) 0 rem(30px)
                    color: scheme.heading
                    line-height: 3
                    +min(1)
                        font-size: 1.4rem
                       margin: 0 0 rem(80px)
                    +min(2)
                        font-size: 1.4rem
                    +min(3)
                        font-size: 1.4rem                
            div
                display: flex
                flex-flow: row wrap
                justify-content: center
                width: 100%
                +min(1)
                    width: auto
                a
                    button(large, color: mediumseagreen)
                    margin: rem(8px) 10px
                   
                    +min(1)
                        font-size: 1.2rem
                        padding: rem(16px) rem(35px)
                        width: 50%
                    +min(2)
                        font-size: 1.25rem
                        padding: rem(17px) rem(36px)
                        width: 25%
                    +min(3)
                        font-size: 1.32rem
                        padding: rem(18px) rem(38px)
                        width: 20%
